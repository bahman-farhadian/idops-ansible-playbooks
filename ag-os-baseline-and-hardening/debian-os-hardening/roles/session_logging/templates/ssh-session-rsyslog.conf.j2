# Log SSH daemon auth/session activity into a dedicated file.
# Do not stop processing so events can still reach remote forwarding.
if ($programname == 'sshd') then {
    action(type="omfile" file="{{ ssh_session_log_file }}")
}
{% if ssh_command_logging_enabled | bool %}

# Log interactive SSH command history events generated by profile hook.
# Do not stop processing so events can still reach remote forwarding.
if ($syslogfacility-text == '{{ ssh_command_log_facility }}' and $programname == '{{ ssh_command_logger_tag }}') then {
    action(type="omfile" file="{{ ssh_command_log_file }}")
}
{% endif %}
